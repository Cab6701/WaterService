@{
    ViewData["Title"] = "Tra cứu thông tin nước sạch";
}

<div class="container mt-5">
    <h2 class="text-center text-primary mb-4">TRA CỨU THÔNG TIN NƯỚC SẠCH</h2>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    <form asp-action="Result" method="post" class="text-center">
        <div class="mb-3">
            <input type="text" name="maKH" class="form-control form-control-lg text-center" placeholder="Nhập Mã KH hoặc SĐT" required />
        </div>
        <button type="submit" class="btn btn-primary btn-lg w-100">XEM</button>
    </form>
</div>
