@model WaterService.Models.Customer
@{
ViewData["Title"] = "Customer Details";
}

<div class="customer-details">
    <div class="page-header mb-4">
        <div class="d-flex justify-content-between align-items-start">
            <div>
                <h1 class="h3 mb-0">Customer Details</h1>
                <p class="text-muted mb-0">Complete information for <strong>@Model.CustomerCode</strong></p>
            </div>
            <div class="btn-group">
                <a href="@Url.Action(" Edit", new { id=Model.Id })" class="btn btn-primary">
                    <i class="fas fa-edit"></i> Edit Customer
                </a>
                <a href="@Url.Action(" Index")" class="btn btn-outline-secondary">
                    <i class="fas fa-list"></i> Back to List
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Basic Information -->
        <div class="col-lg-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="fas fa-user"></i> Basic Information
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-sm-4">
                            <small class="text-muted">Customer ID</small>
                        </div>
                        <div class="col-sm-8">
                            <strong>@Model.CustomerCode</strong>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4">
                            <small class="text-muted">Name</small>
                        </div>
                        <div class="col-sm-8">
                            @Model.HouseholdHeadName
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4">
                            <small class="text-muted">Phone</small>
                        </div>
                        <div class="col-sm-8">
                            <a href="tel:@Model.PhoneNumber">@Model.PhoneNumber</a>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4">
                            <small class="text-muted">Status</small>
                        </div>
                        <div class="col-sm-8">
                            <span class="badge @(Model.Status == WaterService.Models.CustomerStatus.Paid ? " bg-success"
                                : "bg-secondary" )">
                                @Model.Status
                            </span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Address Information -->
            <div class="card mb-4">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="fas fa-map-marker-alt"></i> Address
                    </h6>
                </div>
                <div class="card-body">
                    <p class="mb-0">@Model.Address</p>
                </div>
            </div>

            <!-- Account Information -->
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="fas fa-info-circle"></i> Account Information
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-sm-4">
                            <small class="text-muted">Created</small>
                        </div>
                        <div class="col-sm-8">
                            @Model.CreatedAt.ToString("MMM dd, yyyy 'at' h:mm tt")
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4">
                            <small class="text-muted">Last Updated</small>
                        </div>
                        <div class="col-sm-8">
                            @Model.UpdatedAt.ToString("MMM dd, yyyy 'at' h:mm tt")
                        </div>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                    <div class="row">
                        <div class="col-sm-4">
                            <small class="text-muted">Notes</small>
                        </div>
                        <div class="col-sm-8">
                            <p class="mb-0">@Model.Notes</p>
                        </div>
                    </div>
                    }
                </div>
            </div>
        </div>

        <!-- Billing and Service Information -->
        <div class="col-lg-8">
            <!-- Billing Summary -->
            <div class="card mb-4">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="fas fa-receipt"></i> Billing Summary
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-3">
                            <div class="border-end">
                                <h4 class="text-primary mb-1">₫0</h4>
                                <small class="text-muted">Current Balance</small>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="border-end">
                                <h4 class="text-success mb-1">₫0</h4>
                                <small class="text-muted">Total Paid</small>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="border-end">
                                <h4 class="text-info mb-1">0</h4>
                                <small class="text-muted">Total Invoices</small>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <h4 class="text-warning mb-1">0</h4>
                            <small class="text-muted">Overdue Invoices</small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recent Invoices -->
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h6 class="mb-0">
                        <i class="fas fa-file-invoice"></i> Recent Invoices
                    </h6>
                    <a href="#" class="btn btn-sm btn-outline-primary">
                        <i class="fas fa-plus"></i> New Invoice
                    </a>
                </div>
                <div class="card-body">
                    <div class="text-center py-4">
                        <i class="fas fa-file-invoice fa-3x text-muted mb-3"></i>
                        <h6 class="text-muted">No invoices found</h6>
                        <p class="text-muted mb-0">This customer doesn't have any invoices yet.</p>
                        <a href="#" class="btn btn-sm btn-primary mt-2">
                            <i class="fas fa-plus"></i> Create First Invoice
                        </a>
                    </div>
                </div>
            </div>

            <!-- Meter Reading History -->
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h6 class="mb-0">
                        <i class="fas fa-tachometer-alt"></i> Meter Reading History
                    </h6>
                </div>
                <div class="card-body">
                    <!-- Form nhập/chỉnh sửa chỉ số nước -->
                    <div class="mb-4">
                        <form asp-action="AddOrEditMeterReading" method="post" class="row g-3 align-items-end">
                            <input type="hidden" name="CustomerId" value="@Model.Id" />
                            <input type="hidden" name="Id" value="@ViewBag.EditReading?.Id" />
                            <div class="col-md-2">
                                <label class="form-label">Quý</label>
                                <select class="form-select" name="Quarter" required>
                                    <option value="">Chọn quý</option>
                                    @for (int q = 1; q <= 4; q++) { <option value="@q"
                                        selected="@(ViewBag.EditReading?.Quarter == q)">
                                        Quý @q
                                        </option>
                                        }
                                </select>
                            </div>
                            <div class="col-md-2">
                                <label class="form-label">Năm</label>
                                <input type="number" class="form-control" name="Year"
                                    value="@(ViewBag.EditReading?.Year ?? DateTime.Now.Year)" required min="2000"
                                    max="2100" />
                            </div>
                            <div class="col-md-2">
                                <label class="form-label">Chỉ số cũ</label>
                                <input type="number" step="0.01" class="form-control" name="PreviousReading"
                                    value="@ViewBag.EditReading?.PreviousReading" required />
                            </div>
                            <div class="col-md-2">
                                <label class="form-label">Chỉ số mới</label>
                                <input type="number" step="0.01" class="form-control" name="CurrentReading"
                                    value="@ViewBag.EditReading?.CurrentReading" required />
                            </div>
                            <div class="col-md-2">
                                <label class="form-label">Ghi chú</label>
                                <input type="text" class="form-control" name="Notes"
                                    value="@ViewBag.EditReading?.Notes" />
                            </div>
                            <div class="col-md-2">
                                <button type="submit" class="btn btn-primary w-100">@((ViewBag.EditReading != null) ?
                                    "Cập nhật" : "Thêm mới")</button>
                            </div>
                        </form>
                    </div>
                    <!-- Bảng lịch sử chỉ số nước -->
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Quý</th>
                                    <th>Năm</th>
                                    <th>Chỉ số cũ</th>
                                    <th>Chỉ số mới</th>
                                    <th>Tiêu thụ</th>
                                    <th>Ghi chú</th>
                                    <th>Ngày nhập</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.MeterReadings != null && Model.MeterReadings.Any())
                                {
                                foreach (var reading in Model.MeterReadings.OrderByDescending(r =>
                                r.Year).ThenByDescending(r => r.Quarter))
                                {
                                <tr>
                                    <td>@reading.Quarter</td>
                                    <td>@reading.Year</td>
                                    <td>@reading.PreviousReading</td>
                                    <td>@reading.CurrentReading</td>
                                    <td>@(reading.CurrentReading - reading.PreviousReading)</td>
                                    <td>@reading.Notes</td>
                                    <td>@reading.CreatedAt.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <form asp-action="EditMeterReading" method="get" style="display:inline">
                                            <input type="hidden" name="id" value="@reading.Id" />
                                            <input type="hidden" name="customerId" value="@Model.Id" />
                                            <button type="submit" class="btn btn-sm btn-warning">Chỉnh sửa</button>
                                        </form>
                                        <form asp-action="DeleteMeterReading" method="post" style="display:inline"
                                            onsubmit="return confirm('Bạn có chắc muốn xóa?');">
                                            <input type="hidden" name="id" value="@reading.Id" />
                                            <input type="hidden" name="customerId" value="@Model.Id" />
                                            <button type="submit" class="btn btn-sm btn-danger">Xóa</button>
                                        </form>
                                    </td>
                                </tr>
                                }
                                }
                                else
                                {
                                <tr>
                                    <td colspan="8" class="text-center text-muted">Chưa có chỉ số nước nào</td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Payment History -->
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="fas fa-credit-card"></i> Payment History
                    </h6>
                </div>
                <div class="card-body">
                    <div class="text-center py-4">
                        <i class="fas fa-credit-card fa-3x text-muted mb-3"></i>
                        <h6 class="text-muted">No payments found</h6>
                        <p class="text-muted mb-0">This customer doesn't have any payment history yet.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    $(document).ready(function () {
        // Add any specific JavaScript for the details page here
        console.log('Customer details page loaded for: @Model.CustomerCode');
    });
</script>
}