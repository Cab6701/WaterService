@model WebThanhToanTienNuoc.Models.User

@{
    ViewData["Title"] = "Chi tiết Hộ dân";
}

<div class="container mt-4">
    <h2 class="mb-3">Chi tiết Hộ dân</h2>

    <!-- Thông tin hộ dân -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            Thông tin hộ dân
        </div>
        <div class="card-body">
            <p><strong>Mã KH:</strong> @Model.MaKH</p>
            <p><strong>Tên chủ hộ:</strong> @Model.TenChuHo</p>
            <p><strong>Địa chỉ:</strong> @Model.DiaChi</p>
            <p><strong>Số điện thoại:</strong> @Model.SoDT</p>
        </div>
    </div>

    <!-- Lịch sử ghi số và thanh toán -->
    <div class="card mb-4">
        <div class="card-header bg-dark text-white">
            Lịch sử ghi số & thanh toán
        </div>
        <div class="card-body">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Tháng</th>
                        <th>Chỉ số cũ</th>
                        <th>Chỉ số mới</th>
                        <th>Số m³ tiêu thụ</th>
                        <th>Số tiền (VNĐ)</th>
                        <th>Tình trạng</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Mock dữ liệu, sau này lấy từ DB -->
                    <tr>
                        <td>07/2024</td>
                        <td>120</td>
                        <td>140</td>
                        <td>20</td>
                        <td>100,000</td>
                        <td><span class="badge bg-success">Đã thanh toán</span></td>
                    </tr>
                    <tr>
                        <td>08/2024</td>
                        <td>140</td>
                        <td>165</td>
                        <td>25</td>
                        <td>125,000</td>
                        <td><span class="badge bg-danger">Chưa thanh toán</span></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Các nút hành động -->
    <div class="d-flex gap-2">
        <a asp-controller="WaterUser" asp-action="Edit" asp-route-id="@Model.MaKH"
           class="btn btn-warning">Sửa thông tin</a>

        <a asp-controller="WaterUser" asp-action="UpdatePayment" asp-route-id="@Model.MaKH"
           class="btn btn-success">Cập nhật thanh toán</a>

        <a asp-controller="WaterUser" asp-action="AddReading" asp-route-id="@Model.MaKH"
           class="btn btn-primary">Nhập chỉ số mới</a>

        <a asp-controller="WaterUser" asp-action="UserManager"
           class="btn btn-secondary">← Quay lại danh sách</a>
    </div>
</div>
