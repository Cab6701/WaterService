@model List<WebThanhToanTienNuoc.Models.User>

@{
    ViewData["Title"] = "Quản lý Hộ dân";
}

<div class="container mt-4">
    <h2 class="mb-3">Quản lý Hộ dân</h2>

    <!-- Ô tìm kiếm -->
    <form method="get" class="row mb-3">
        <div class="col-md-6">
            <input type="text" name="search"
                   class="form-control"
                   placeholder="Tìm theo Mã KH, Tên, SĐT"
                   value="@ViewBag.Search" />
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary">Tìm kiếm</button>
        </div>
        <div class="col-md-4 text-end">
            <a asp-area="Admin" asp-controller="WaterUser" asp-action="Create"
               class="btn btn-success">+ Thêm hộ dân mới</a>
        </div>
    </form>

    <!-- Bảng danh sách -->
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Mã KH</th>
                <th>Tên chủ hộ</th>
                <th>Địa chỉ</th>
                <th>SĐT</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.MaKH</td>
                    <td>@item.TenChuHo</td>
                    <td>@item.DiaChi</td>
                    <td>@item.SoDT</td>
                    <td>
                        <a asp-area="Admin" asp-controller="WaterUser" asp-action="Details" asp-route-id="@item.MaKH"
                           class="btn btn-info btn-sm">Chi tiết</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
